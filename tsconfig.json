{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "baseUrl": ".",
    "paths": {
      "documents": [
        "documents/index.ts"
      ],
      "documents/*": [
        "documents/*"
      ],
      "icons": [
        "icons/index.ts"
      ],
      "icons/*": [
        "icons/*"
      ],
      "packages": [
        "packages/index.ts"
      ],
      "packages/*": [
        "packages/*"
      ],
      "@quarter/simple-ui": [
        "packages/index.ts"
      ],
      "@quarter/simple-ui/*": [
        "packages/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  },
  "include": [
    "documents/**/*.ts",
    "documents/**/*.d.ts",
    "documents/**/*.tsx",
    "documents/**/*.vue",
    "documents/**/*.md",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.d.tsx",
    "packages/**/*.vue",
    "packages/**/*.md",
  ]
}